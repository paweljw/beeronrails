<div class="media">

<a class="pull-right" href="#">
	<img class="media-object" src="http://placehold.it/250x350" />
</a>

<div class="page-header">
	<h1><%= @beer.nazwa %></h1>

	<h3 class="pull-right">
		<%= link_to "Edit", edit_beer_path(@beer), :class => "btn btn-primary" %>
		<%= link_to 'Delete', beer_path(@beer),
                    method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
	</h3>

</div>


<h2>Beer info:</h2>
<p>
  <strong>Brewery:</strong>
  <%= link_to @beer.brewery_name, brewery_path(@beer.brewery_id) %>
</p>
<p>
<strong>Country: </strong>
<% if @beer.kraj == "_" or @beer.kraj.empty? %>
  <img style="vertical-align: baseline" src="/assets/flags/_.png" /> <em>Unavailable</em>
<% else %>
  <img style="vertical-align: baseline" src="/assets/flags/<%= @beer.kraj %>.png" /> <%= IsoCountryCodes.find(@beer.kraj).name %> 
<%end>%>
<p>
  <strong>Comment:</strong> <%= raw(@beer.icons) %><br/>
  <% if @beer.komentarz.empty? %>
  	<em>Sorry! No comment found.</em>
  <% else %>
  <%= @beer.komentarz %>
  <% end %>
</p>
</div>