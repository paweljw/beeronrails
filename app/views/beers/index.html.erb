<div class="page-header">
  <h1>All beers listing</h1>
</div>

<table class="table table-striped">
  <tr>
    <th>Beer name</th>
    <th>Brewery</th>
  </tr>
 
  <% @beers.each do |beer| %>
    <tr>
      <td><%= beer.nazwa %></td>
      <td><%= beer.brewery_id %></td>
    </tr>
  <% end %>
</table>