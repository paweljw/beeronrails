<div class="page-header">
  <h1>All breweries listing</h1>
</div>

<%= paginate @breweries_paginate %>

<table class="table table-striped">
  <tr>
    <th>Brewery name</th>
    <th>Beer count</th>
    <th>Country</th>
  </tr>
 
  <% @breweries.each do |brewery| %>
    <tr>
      <td><%= link_to brewery.nazwa, brewery_path(brewery) %></td>
      <td><%= brewery.beer_count %></td>
      <td><img src="/assets/flags/<%= brewery.country.kraj %>.png" /></td>
    </tr>
  <% end %>
</table>

<%= paginate @breweries_paginate %>
