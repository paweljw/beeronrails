<div class="page-header">
	<h1>Search
		<% if params[:term] %>
		<% unless params[:term].empty? %> for "<em><%= params[:term] %></em>"<%end%></h1>
		<%end%>
</div>


<div style="max-width: 600px; margin: 0 auto">
	<%= form_tag breweries_search_path, :method => 'get' do %>
	<div class="form-group">
		<div class="input-group">
			<%= text_field_tag :term, params[:term], :class => "form-control input-lg", :placeholder => "Brewery name..."%>
				<div class="input-group-addon">
					<%= submit_tag "Search", :name => nil, :class => "btn btn-success", :style => "height: 32px" %>
				</div>
		</div>
	</div>
	<%end%>
</div>

<% if params[:term] %>
<% unless params[:term].empty? %>

<%= render 'searchlist' %>

<%end%>
<%end%>