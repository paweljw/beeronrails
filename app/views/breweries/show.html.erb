<div class="page-header">
  <h1><%= @brewery.nazwa %> <span class="label label-default"> <%= @beers.count %> </span> </h1>


  <h3 class="pull-right">
    <%= link_to "Edit", edit_brewery_path(@brewery), :class => "btn btn-primary" %>
    <% if @beers.count < 1 %>
    <%= link_to 'Delete', brewery_path(@brewery),
                    method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
    <% else %>
    <%= link_to 'Delete', "#", :onclick => 'alert("Can\'t remove a brewery that still has beers.");', :class => "btn btn-danger" %>
    <% end %>
  </h3>
</div>

<h2>Beers from this brewery:</h2><br/>

<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>Beer name</th>
  </tr>

  <% @beers.each do |beer| %>
    <tr>
      <td><%= beer.id %></td>
      <td><%= link_to beer.nazwa, beer_path(beer) %></td>
    </tr>
  <% end %>
</table>
</table>